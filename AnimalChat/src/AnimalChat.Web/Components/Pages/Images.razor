@page "/images"
@using AnimalChat.Web.Services
@attribute [StreamRendering(true)]

@inject ImageService ImageService

<PageTitle>Images</PageTitle>

<h1>Images</h1>

@if (_images.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var image in _images)
        {
            <li>
                @*                 <img src="@image.FileName" alt="@image.Description" width="100" />
 *@ 
                <p>@image.Id</p>
                <p>@image.FileName</p>
                <p>@image.Description</p>
                <p><img src="@GetImageSrc(image.Data)" alt="@image.Description" /></p>
            </li>
        }
    </ul>
}

@code {
    private List<Image> _images = new List<Image>();

    protected override async Task OnInitializedAsync()
    {
        _images = (await ImageService.GetImagesAsync()).ToList();
    }

    private static string GetImageSrc(byte[] imageData)
    {
        if (imageData.Length == 0)
        {
            return string.Empty;
        }
        var base64Data = Convert.ToBase64String(imageData);
        return $"data:image/jpeg;base64,{base64Data}";
    }
}